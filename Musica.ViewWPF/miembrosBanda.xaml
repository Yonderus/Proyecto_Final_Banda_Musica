<Window x:Class="Musica.ViewWPF.miembrosBanda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musica.ViewWPF"
        mc:Ignorable="d"
        Title="Miembros" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush ImageSource="/Mosaico_Banda.png"/>
    </Window.Background>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Mosaico_Musicos_V2.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="72"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#66000000"
                BorderBrush="#44FFFFFF"
                BorderThickness="0,0,0,1">
            <Grid Margin="18,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="/logo_banda_grande.png"
                       Stretch="Uniform"
                       Margin="-119,0,878,-18"
                       Grid.ColumnSpan="2"/>

                <StackPanel Grid.Column="1"
                            VerticalAlignment="Center"
                            Margin="79,0,0,0">
                    <TextBlock Text="Miembros de la banda"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontSize="20"
                               FontWeight="Bold"
                               Width="993"/>
                    <TextBlock Text="Gestión interna de los miembros de la banda"
                               Foreground="#CCFFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#CC0B1220"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="Nuevo miembro"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontSize="16"
                               FontWeight="Bold"/>

                    <TextBlock Text="Completa los datos y pulsa Agregar."
                               Foreground="#BFFFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Margin="0,4,0,10"/>

                    <TextBlock Text="Nombre"
                               Foreground="#E6FFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,10,0,6"/>
                    <TextBox x:Name="tbNombre"
                             Height="34"
                             FontFamily="Segoe UI"
                             FontSize="13"/>

                    <TextBlock Text="Apellidos"
                               Foreground="#E6FFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,10,0,6"/>
                    <TextBox x:Name="tbApellidos"
                             Height="34"
                             FontFamily="Segoe UI"
                             FontSize="13"/>

                    <TextBlock Text="Email"
                               Foreground="#E6FFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,10,0,6"/>
                    <TextBox x:Name="tbEmail"
                             Height="34"
                             FontFamily="Segoe UI"
                             FontSize="13"/>

                    <TextBlock Text="Instrumento"
                               Foreground="#E6FFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,10,0,6"/>
                    <ComboBox x:Name="cbInstrumento"
                              Height="34"
                              FontFamily="Segoe UI"
                              FontSize="13"
                              SelectionChanged="cbInstrumento_SelectionChanged"/>

                    <TextBlock Text="Teléfono"
                               Foreground="#E6FFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,10,0,6"/>
                    <TextBox x:Name="tbTelefono"
                             Height="34"
                             FontFamily="Segoe UI"
                             FontSize="13"/>

                    <Button x:Name="btbAgregarMiembro"
                            Content="Agregar"
                            Margin="0,16,0,0"
                            Height="40"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#FF9D0D0E"
                            BorderThickness="0"
                            Click="btbAgregarMiembro_Click"/>

                    <Border Margin="0,18,0,0" Background="#22FFFFFF" Height="1"/>

                    <Button x:Name="btbInforme"
                        Content="Generar Informe"
                        Height="40"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#FF063F8E"
                        BorderBrush="#33FFFFFF"
                        BorderThickness="1"
                        Click="btbInforme_Click" Margin="0,14,0,0"/>

                    <Button x:Name="btbVolver"
        Content="Volver a la página anterior"
        Margin="0,14,0,0"
        Height="40"
        FontFamily="Segoe UI"
        FontSize="14"
        FontWeight="SemiBold"
        Foreground="White"
        Background="#FF1F2937"
        BorderBrush="#33FFFFFF"
        BorderThickness="1"
        Click="btbVolver_Click"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2"
                    Background="#CC0B1220"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Listado de miembros"
                                       Foreground="White"
                                       FontFamily="Segoe UI"
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Información de la tabla de miembros."
                                       Foreground="#BFFFFFFF"
                                       FontFamily="Segoe UI"
                                       FontSize="12"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                x:Name="btbEditarMiembro"
                                Content="Editar"
                                MinWidth="110"
                                Height="40"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Background="#FF1F2937"
                                BorderBrush="#33FFFFFF"
                                BorderThickness="1"
                                Click="btbEditarMiembro_Click"/>

                        <Button Grid.Column="3"
                                x:Name="btbEliminarMiembro"
                                Content="Eliminar"
                                MinWidth="110"
                                Height="40"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Background="#FFDC2626"
                                BorderThickness="0"
                                Click="btbEliminarMiembro_Click"/>

                        <Button Grid.Column="5"
                                x:Name="btbLimpiar"
                                Content="Limpiar"
                                MinWidth="110"
                                Height="40"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Background="#FF1F2937"
                                BorderBrush="#33FFFFFF"
                                BorderThickness="1"
                                Click="btbLimpiar_Click"/>
                    </Grid>

                    <DataGrid x:Name="dgvMiembros"
                              SelectionChanged="dgvMiembros_SelectionChanged"
                              Grid.Row="2"
                              d:ItemsSource="{d:SampleData ItemCount=10}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowBackground="#FF0F172A"
                              AlternatingRowBackground="#FF111C33"
                              Foreground="#E6FFFFFF"
                              Background="#00000000"
                              BorderThickness="0"
                              FontFamily="Segoe UI"
                              FontSize="16">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding IdMusico}" />
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
                            <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" />
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                            <DataGridTextColumn Header="Instrumento" Binding="{Binding Instrumento.Nombre}" />
                            <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" />
                        </DataGrid.Columns>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Background" Value="#FF111827"/>
                                <Setter Property="Foreground" Value="#E6FFFFFF"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="BorderBrush" Value="#22FFFFFF"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>