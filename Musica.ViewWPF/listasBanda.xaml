<Window x:Class="Musica.ViewWPF.listasBanda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Listas" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush ImageSource="/Mosaico_Informes.png"/>
    </Window.Background>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Mosaico_Informes_V2.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="72"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#66000000" BorderBrush="#44FFFFFF" BorderThickness="0,0,0,1">
            <Grid Margin="18,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="/logo_banda_grande.png" Stretch="Uniform" Margin="-119,0,878,-18" Grid.ColumnSpan="2"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="79,0,0,0">
                    <TextBlock Text="Listas de actuación"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontSize="20"
                               FontWeight="Bold"
                               Width="990"/>
                    <TextBlock Text="Asignación de músicos a actuaciones"
                               Foreground="#CCFFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#CC0B1220"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="Nueva asignación"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontSize="16"
                               FontWeight="Bold"/>

                    <TextBlock Text="Selecciona actuación y músico, y pulsa Agregar."
                               Foreground="#BFFFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Margin="0,4,0,10"/>

                    <TextBlock Text="Actuación"
                               Foreground="#E6FFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,10,0,6"/>
                    <ComboBox x:Name="cbActuacion"
                              Height="34"
                              FontFamily="Segoe UI"
                              FontSize="13"
                              SelectedValuePath="IdActuacion">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Titulo}" />
                                    <TextBlock Text=" - " />
                                    <TextBlock Text="{Binding Fecha, StringFormat=dd/MM/yyyy}" Foreground="Black" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>


                    <TextBlock Text="Músico"
                               Foreground="#E6FFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,10,0,6"/>
                    <ComboBox x:Name="cbMusico"
                              Height="34"
                              FontFamily="Segoe UI"
                              FontSize="13"
                              SelectedValuePath="IdMusico"
                              SelectionChanged="cbMusico_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Nombre}" />
                                    <TextBlock Text=" " />
                                    <TextBlock Text="{Binding Apellidos}" />
                                    <TextBlock Text=" - " />
                                    <TextBlock Text="{Binding Instrumento.Nombre}" Foreground="Black" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button x:Name="btbAgregarLista"
                            Content="Agregar"
                            Margin="0,16,0,0"
                            Height="40"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#FF9D0D0E"
                            BorderThickness="0"
                            Click="btbAgregarLista_Click"/>

                    <Border Margin="0,18,0,0" Background="#22FFFFFF" Height="1"/>

                    <Button x:Name="btbInforme"
                            Content="Generar Informe"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#FF063F8E"
                            BorderBrush="#33FFFFFF"
                            BorderThickness="1"
                            Click="btbInforme_Click" Height="40" Width="286" Margin="0,14,0,0"/>

                    <Button x:Name="btbLimpiar"
                            Content="Limpiar"
                            Margin="0,14,0,0"
                            Height="40"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#FF1F2937"
                            BorderBrush="#33FFFFFF"
                            BorderThickness="1"
                            Click="btbLimpiar_Click"/>

                    <Button x:Name="btbVolver"
                            Content="Volver a la página anterior"
                            Margin="0,14,0,0"
                            Height="40"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#FF1F2937"
                            BorderBrush="#33FFFFFF"
                            BorderThickness="1"
                            Click="btbVolver_Click"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2"
                    Background="#CC0B1220"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Listado de asignaciones"
                                       Foreground="White"
                                       FontFamily="Segoe UI"
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Músicos asignados a actuaciones."
                                       Foreground="#BFFFFFFF"
                                       FontFamily="Segoe UI"
                                       FontSize="12"/>
                        </StackPanel>

                        <Button Grid.Column="3"
                                x:Name="btbEliminarLista"
                                Content="Eliminar"
                                MinWidth="110"
                                Height="40"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Background="#FFDC2626"
                                BorderThickness="0"
                                Click="btbEliminarLista_Click"/>
                    </Grid>

                    <DataGrid x:Name="dgvListas"
                              Grid.Row="2"
                              SelectionChanged="dgvListas_SelectionChanged"
                              d:ItemsSource="{d:SampleData ItemCount=10}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowBackground="#FF0F172A"
                              AlternatingRowBackground="#FF111C33"
                              Foreground="#E6FFFFFF"
                              Background="#00000000"
                              BorderThickness="0"
                              FontFamily="Segoe UI"
                              FontSize="16">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding IdLista}" />
                            <DataGridTextColumn Header="Actuación" Binding="{Binding Actuacion.Titulo}" />
                            <DataGridTextColumn Header="Fecha" Binding="{Binding Actuacion.Fecha, StringFormat=dd/MM/yyyy}" />
                            <DataGridTextColumn Header="Músico" Binding="{Binding Musico.Nombre}" />
                            <DataGridTextColumn Header="Instrumento" Binding="{Binding Musico.Instrumento.Nombre}" />

                        </DataGrid.Columns>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Background" Value="#FF111827"/>
                                <Setter Property="Foreground" Value="#E6FFFFFF"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="BorderBrush" Value="#22FFFFFF"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>

                    <TextBlock x:Name="txtInstrumentoSeleccionado"
                               Foreground="#BFFFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Margin="0,6,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
