<Window x:Class="Musica.ViewWPF.gestionTipoActuacionesBanda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musica.ViewWPF"
        mc:Ignorable="d"
        Title="gestionTipoActuacionesBanda" Height="670" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#FE040429" Offset="0"/>
                <GradientStop Color="#FE040429" Offset="0.22"/>
                <GradientStop Color="#FE38071F" Offset="0.55"/>
                <GradientStop Color="#FF9D0D0E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="72"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#66000000" BorderBrush="#44FFFFFF" BorderThickness="0,0,0,1">
            <Grid Margin="0,0,18,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="/logo_banda_grande.png" Stretch="Uniform" Margin="0,0,0,-18"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,0">
                    <TextBlock Text="Tipo Actuaciones"
                       Foreground="White"
                       FontFamily="Segoe UI"
                       FontSize="20"
                       FontWeight="Bold" Width="921"/>
                    <TextBlock Text="Gestión interna de actuaciones de la banda"
                       Foreground="#CCFFFFFF"
                       FontFamily="Segoe UI"
                       FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Row="1" Margin="18,18,18,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                Background="#CC0B1220"
                BorderBrush="#33FFFFFF"
                BorderThickness="1"
                CornerRadius="14"
                Padding="16">
                <StackPanel>

                    <TextBlock Text="Nueva tipo de actuación"
                        Foreground="White"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="Bold"/>

                    <TextBlock Text="Completa los datos y pulsa Agregar."
                        Foreground="#BFFFFFFF"
                        FontFamily="Segoe UI"
                        FontSize="12"
                        Margin="0,4,0,10"/>

                    <TextBlock Text="Tipo de actuación"
                        Foreground="#E6FFFFFF"
                        FontFamily="Segoe UI"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Margin="0,10,0,6"/>
                    <TextBox x:Name="tb_tipoActuacion" Height="34" FontFamily="Segoe UI" FontSize="13" Margin="0,0,0,40"/>

                    <Button Content="Agregar"
                        Margin="0,16,0,225"
                        Height="40"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#FF9D0D0E"
                        BorderThickness="0" Click="Agregar_Click"/>
                    <Button x:Name="btbGestionTipoActuaciones"
            Content="Volver a la página anterior"
            FontFamily="Segoe UI"
            FontSize="14"
            FontWeight="SemiBold"
            Foreground="White"
            Background="#FF1F2937"
            BorderBrush="#33FFFFFF"
            BorderThickness="1" Click="btbGestionTipoActuaciones_Click" Height="40" Width="286"/>

                </StackPanel>
            </Border>

            <Border Grid.Column="2"
                Background="#CC0B1220"
                BorderBrush="#33FFFFFF"
                BorderThickness="1"
                CornerRadius="14"
                Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="72*"/>
                        <RowDefinition Height="43*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Listado de tipo de actuaciones"
                                Foreground="White"
                                FontFamily="Segoe UI"
                                FontSize="16"
                                FontWeight="Bold"/>
                            <TextBlock Text="Información de la tabla de tipos de actuaciones."
                                Foreground="#BFFFFFFF"
                                FontFamily="Segoe UI"
                                FontSize="10"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                            x:Name="btbEditar"
                            Content="Editar"
                            MinWidth="110"
                            Height="40"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#FF1F2937"
                            BorderBrush="#33FFFFFF"
                            BorderThickness="1"
                            Click="btbEditar_Click"/>

                        <Button Grid.Column="3"
                            x:Name="btbEliminar"
                            Content="Eliminar"
                            MinWidth="110"
                            Height="40"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#FFDC2626"
                            BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Right" Width="110" Click="btbEliminar_Click"/>
                    </Grid>

                    <DataGrid x:Name="dgvTipoActuaciones" Grid.Row="2"
                              d:ItemsSource="{d:SampleData ItemCount=10}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowBackground="#FF0F172A"
                              AlternatingRowBackground="#FF111C33"
                              Foreground="#E6FFFFFF"
                              Background="#00000000"
                              BorderThickness="0"
                              FontFamily="Segoe UI"
                              FontSize="16"
                              Grid.RowSpan="2"
                              SelectionChanged="dgvTipoActuaciones_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding IdTipoActuacion}" />
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
                        </DataGrid.Columns>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Background" Value="#FF111827"/>
                                <Setter Property="Foreground" Value="#E6FFFFFF"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="BorderBrush" Value="#22FFFFFF"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                    <Grid Grid.Row="2"/>

                </Grid>
            </Border>

        </Grid>

    </Grid>
</Window>
