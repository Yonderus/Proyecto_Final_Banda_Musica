<Window x:Class="Musica.ViewWPF.instrumentosBanda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Instrumentos" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush ImageSource="/Mosaico_Instrumentos.png"/>
    </Window.Background>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Mosaico_Instrumentos_V2.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="72"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#66000000" BorderBrush="#44FFFFFF" BorderThickness="0,0,0,1">
            <Grid Margin="18,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="/logo_banda_grande.png" Stretch="Uniform" Margin="-119,0,878,-18" Grid.ColumnSpan="2"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="79,0,0,0">
                    <TextBlock Text="Instrumentos"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontSize="20"
                               FontWeight="Bold"
                               Width="985"/>
                    <TextBlock Text="Gestión interna de instrumentos"
                               Foreground="#CCFFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#CC0B1220"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="Nuevo instrumento"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontSize="16"
                               FontWeight="Bold"/>

                    <TextBlock Text="Introduce el nombre y pulsa Agregar."
                               Foreground="#BFFFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Margin="0,4,0,10"/>

                    <TextBlock Text="Nombre"
                               Foreground="#E6FFFFFF"
                               FontFamily="Segoe UI"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,10,0,6"/>
                    <TextBox x:Name="tbNombreInstrumento" Height="34" FontFamily="Segoe UI" FontSize="13"/>

                    <Button x:Name="btbAgregarInstrumento"
                            Content="Agregar"
                            Margin="0,16,0,0"
                            Height="40"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#FF9D0D0E"
                            BorderThickness="0"
                            Click="btbAgregarInstrumento_Click"/>

                    <Border Margin="0,18,0,0" Background="#22FFFFFF" Height="1"/>

                    <Button x:Name="btbLimpiar"
                            Content="Limpiar"
                            Margin="0,14,0,0"
                            Height="40"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#FF1F2937"
                            BorderBrush="#33FFFFFF"
                            BorderThickness="1"
                            Click="btbLimpiar_Click"/>

                    <Button x:Name="btbVolver"
                            Content="Volver a la página anterior"
                            Margin="0,14,0,0"
                            Height="40"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#FF1F2937"
                            BorderBrush="#33FFFFFF"
                            BorderThickness="1"
                            Click="btbVolver_Click"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2"
                    Background="#CC0B1220"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Listado de instrumentos"
                                       Foreground="White"
                                       FontFamily="Segoe UI"
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Información de la tabla de instrumentos."
                                       Foreground="#BFFFFFFF"
                                       FontFamily="Segoe UI"
                                       FontSize="12"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                x:Name="btbEditarInstrumento"
                                Content="Editar"
                                MinWidth="110"
                                Height="40"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Background="#FF1F2937"
                                BorderBrush="#33FFFFFF"
                                BorderThickness="1"
                                Click="btbEditarInstrumento_Click"/>

                        <Button Grid.Column="3"
                                x:Name="btbEliminarInstrumento"
                                Content="Eliminar"
                                MinWidth="110"
                                Height="40"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Background="#FFDC2626"
                                BorderThickness="0"
                                Click="btbEliminarInstrumento_Click"/>
                    </Grid>

                    <DataGrid x:Name="dgvInstrumentos"
                              Grid.Row="2"
                              SelectionChanged="dgvInstrumentos_SelectionChanged"
                              d:ItemsSource="{d:SampleData ItemCount=10}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowBackground="#FF0F172A"
                              AlternatingRowBackground="#FF111C33"
                              Foreground="#E6FFFFFF"
                              Background="#00000000"
                              BorderThickness="0"
                              FontFamily="Segoe UI"
                              FontSize="16">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding IdInstrumento}" />
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
                        </DataGrid.Columns>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Background" Value="#FF111827"/>
                                <Setter Property="Foreground" Value="#E6FFFFFF"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="BorderBrush" Value="#22FFFFFF"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
